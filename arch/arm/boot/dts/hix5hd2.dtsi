				status = "disabled";
			};

			gpio0: gpio@f8b20000 {
                                compatible = "arm,pl061", "arm,primecell";
                                reg = <0xf8b20000 0x1000>;
                                interrupts = <0 108 0x4>;
                                gpio-controller;
                                #gpio-cells = <2>;
				clocks = <&clock HIX5HD2_FIXED_100M>;
				clock-names = "apb_pclk";
                                interrupt-controller;
                                #interrupt-cells = <2>;
                                status = "disabled";
                        };

			gpio1: gpio@f8b21000 {
                                compatible = "arm,pl061", "arm,primecell";
