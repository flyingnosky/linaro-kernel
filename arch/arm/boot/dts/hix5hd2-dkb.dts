/dts-v1/;
#include "hix5hd2.dtsi"

/ {
	model = "Hisilicon Hi3716 Development Board";
	compatible = "hisilicon,hi3716cv200";

	chosen {
		bootargs = "console=ttyAMA0,115200 root=/dev/nfs rw ip=192.168.1.100:192.168.1.1::255.255.255.0::eth0:off nfsroot=192.168.1.10:/rootfs";
		//bootargs = "console=ttyAMA0,115200";
	};

	cpus {
		#address-cells = <1>;
		#size-cells = <0>;

		cpu@0 {
			compatible = "arm,cortex-a9";
			device_type = "cpu";
			reg = <0>;
			next-level-cache = <&l2>;
		};

		cpu@1 {
			compatible = "arm,cortex-a9";
			device_type = "cpu";
			reg = <1>;
			next-level-cache = <&l2>;
		};
	};

	memory {
		device_type = "memory";
		reg = <0x00000000 0x80000000>;
	};

	soc {
		amba {
			timer0: timer@f8002000 {
				status = "okay";
			};

			uart0: uart@f8b00000 {
				status = "okay";
			};
		};

		gmac0: ethernet@f9840000 {
			#address-cells = <1>;
			#size-cells = <0>;
			phy-handle = <&phy2>;
			phy-mode = "mii";
			mac-address = [00 00 00 00 00 00];

			phy2: ethernet-phy@2 {
				reg = <2>;
			};
		};

		gmac1: ethernet@f9841000 {
			#address-cells = <1>;
			#size-cells = <0>;
			phy-handle = <&phy1>;
			phy-mode = "rgmii";
			mac-address = [00 00 00 00 00 00];

			phy1: ethernet-phy@1 {
				reg = <1>;
			};
                };

		ahci:sata@f9900000 {
                        phys = <&sata_phy>;
                        phy-names = "sata-phy";
                };

                sata_phy:phy@f9900000 {
                        compatible = "hisilicon,hix5hd2-sata-phy";
                        reg = <0xf9900000 0x10000>;
			hisilicon,syscon = <&peri_ctrl>;
			hisilicon,power-reg = <0x8 10>;
			hisilicon,reg-init = <0x148 0 32 0x345cb8>,<0x14c 0 32 0x20545>;
                        #phy-cells = <0>;
                };

	};
};
